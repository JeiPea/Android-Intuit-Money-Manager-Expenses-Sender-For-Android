<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:layout_margin="20dp" android:text="TextView" android:id="@+id/expense_name" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
     
  
    <EditText android:inputType="number" android:textSize="50dp" android:layout_margin="20dp" android:maxLength="6" android:layout_width="match_parent" android:id="@+id/expense" android:layout_height="wrap_content">
        <requestFocus></requestFocus>
    </EditText>
    <Button android:text="Save Expense" android:layout_margin="20dp" android:id="@+id/save_expense" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:orientation="vertical"></LinearLayout>
    
</LinearLayout>
